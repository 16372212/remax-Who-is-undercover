@import "./../../remax-styles.wxss";
.page-add-todo {
  display: flex;
  flex: 1;
  flex-direction: column;
  min-height: 100vh;
}

.add-todo {
  padding: 40rpx;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-todo-input {
  display: block;
  font-size: 50rpx;
  font-weight: 100;
  padding: 5rpx 5rpx;
  background: none;
  border:none;
  border-bottom: 1rpx solid #DFDFDF;
  color: #0EFFD6;
  width: 100%;
}



.todo-footer {
  padding: 20rpx 0 100rpx;
  font-size: 48rpx;
  font-weight: 200;
  text-align: center;
}

/* first-card */
.myPic {
  display: flex;
  flex-wrap: wrap;
  color: #999999;
  font-size: .75rem;
  text-align: center;
  margin: 24rpx 0px;
}
.myPic .flex-width-3 {
  flex: 0 0 33.3%;
}
.myPic .flex-width-4 {
  flex: 0 0 25%;
}
.myPic-image {
  width: 88rpx;
  height: 88rpx;
}
.myCard {
  font-size: 0.875rem;
  margin-bottom: 18rpx;
}
.myCard > view:first-child {
  font-weight: bold;
  color: #000000;
}
.special-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 19rpx;
  height: 70rpx;
  background-color: rgba(122, 197, 205, 0.1);
  color: #746f6d;
  font-size: .75rem;
  padding: 6rpx 12rpx;
  margin-bottom: 12rpx;
}
.special-bottom image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 8rpx;
}
.special-bottom-middle {
  flex: auto;
}
.special-bottom > view:last-child {
  flex: 0 0 100rpx;
  border: 1rpx solid #767677;
  border-radius: 25rpx;
  text-align: center;
  padding: 4rpx;
}
.top-yellow-background {
  width: 100%;
  height: 300rpx;
  position: absolute;
  background-color: #ffe60f;
  border-bottom-left-radius: 20%;
  border-bottom-right-radius: 20%;
  z-index: -1;
}
